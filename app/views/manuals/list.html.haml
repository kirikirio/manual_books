= render 'shared/sub-header'
- if @searches.present?
  .list__search
    = form_with url: list_path, local: true do |form|
      .serach-main-box
        =  form.text_field :search, {class: 'search-box', placeholder: 'キーワードを入力して再検索'}
        = button_tag type: 'submit' do
          = fa_icon 'search'
    .content
      %section.new__items
        .new__items-genre
          %h3
            = "#{@search_word} "
            %span の検索結果
      %section.new__items
        .new__items__container
          - @searches.each do |search|
            = link_to manual_path(search.id) do
              .new__items__container__box
                .new__items__container__box__item_body
                  %h3
                    = search.name

- else
  .content
    %section.new__items
      .new__manual
        %h3
          該当するマニュアルが見つかりません。検索条件を変えて、再度お試しください。
  = render 'shared/footer'